<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kubaczeremosz.scorekeeper.MainActivity"
    android:background="@drawable/pattern"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="8dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/team_A"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="Team:"
                android:background="@color/colorAccentOpacity"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:hint="team name"
                android:textSize="25sp"
                android:background="@color/colorAccentOpacity"
                />

            <TextView
                android:id="@+id/pts_A"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center"
                android:text="0"
                android:textSize="70sp"
                android:background="@color/colorAccentOpacity" />

            <Button
                android:id="@+id/team_A_goal"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="10dp"
                android:onClick="addGoalA"
                android:text="@string/goal" />

            <TextView
                android:id="@+id/reds_A"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="0"
                android:textSize="30sp"
                android:background="@color/colorAccentOpacity"/>
            <Button
                android:id="@+id/team_A_red"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:onClick="addRedA"
                android:text="Add red card" />

            <TextView
                android:id="@+id/yellows_A"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="0"
                android:textSize="30sp"
                android:background="@color/colorAccentOpacity"/>
            <Button
                android:id="@+id/team_A_yellow"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:onClick="addYellowA"
                android:text="Add yellow card" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/team_B"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="Team:"
                android:background="@color/colorAccentOpacity"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:hint="team name"
                android:textSize="25sp"
                android:background="@color/colorAccentOpacity"
                />

            <TextView
                android:id="@+id/pts_B"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center"
                android:text="0"
                android:textSize="70sp"
                android:background="@color/colorAccentOpacity"/>

            <Button
                android:id="@+id/team_B_goal"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="10dp"
                android:onClick="addGoalB"
                android:text="@string/goal" />

            <TextView
                android:id="@+id/reds_B"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="0"
                android:textSize="30sp"
                android:background="@color/colorAccentOpacity"/>
            <Button
                android:id="@+id/team_B_red"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:onClick="addRedB"
                android:text="Add red card" />

            <TextView
                android:id="@+id/yellows_B"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="0"
                android:textSize="30sp"
                android:background="@color/colorAccentOpacity"/>
            <Button
                android:id="@+id/team_B_yellow"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:onClick="addYellowB"
                android:text="Add yellow card" />


        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/reset"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:onClick="reset"
        android:text="RESET"
        android:textSize="25dp" />
</LinearLayout>

